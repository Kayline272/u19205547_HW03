@model IEnumerable<u19205547_HW03.Models.FileModel>

@{
    ViewBag.Title = "Images";
}

<h2>Images</h2>
<h4>........... "Media/Images/" folder</h4>

<table class="table">
  
@foreach (var img in Model) {
    <tr>
        <td>
            
            <img src="~/App_Data/Media/Images/" />
            <br />
            @Html.DisplayFor(modelItem => img.FileName)
            <br />
            <button class="btn btn-success">
                @Html.ActionLink("DOWNLOAD", "DownloadFile", new { _fileName = img.FileName }, new { style = "text-decoration:none; color:azure" })

            </button>
            <button class="btn btn-danger">
                @Html.ActionLink("DELETE", "DeleteFile", new { _fileName = img.FileName }, new { style = "text-decoration:none; color:azure" })
            </button>
        </td>
    </tr>
}

</table>
